@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select 
                    asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name", Model.SelectedCategory))" class="form-select" 
                    name="category">
                        <option value="0">All</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary">Apply</button>
                </div>
            </div>
        </div>
    </form>
</div>

<form asp-action="EditProducts" method="post">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width: 330px;">@Html.DisplayNameFor(m => m.Products[0].ProductId)</th>
                <th style="width: 120px;">@Html.DisplayNameFor(m => m.Products[0].Image)</th>
                <th>@Html.DisplayNameFor(m => m.Products[0].Image)</th>
                <th style="width: 340px;">@Html.DisplayNameFor(m => m.Products[0].Price)</th>
                <td></td>
                <th style="width: 128px;"></th>
            </tr>
        </thead>
        <tbody>
            
            @for(var i = 0; i < @Model.Products.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Products[i].ProductId
                        <input type="hidden" asp-for="@Model.Products[i].ProductId">
                    </td>
                    <td>@Model.Products[i].Name</td>
                    <td>
                        <img src="~/img/@Model.Products[i].Image" alt="" class="img-fluid" alt="">
                    </td>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Price</td>
                    <td>
                        <input type="checkbox" asp-for="@Model.Products[i].IsActive">
                    </td>
                    <td>
                        <a href="/Home/Edit/@Model.Products[i].ProductId" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Home/Delete/@Model.Products[i].ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
